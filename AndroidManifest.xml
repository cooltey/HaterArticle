<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cooltey.hater"
    android:versionCode="25"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

	<uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/Theme.Sherlock.Light.DarkActionBar" >
        <activity
            android:name="com.cooltey.hater.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.cooltey.hater.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:configChanges="orientation"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.hater.RegisterActivity"
            android:label="@string/title_activity_register"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:configChanges="orientation"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.hater.ForgetPwdActivity"
            android:label="@string/title_activity_forgetpwd"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:configChanges="orientation"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.hater.NewArticleActivity"
            android:label="@string/title_activity_publish"
            android:windowSoftInputMode="adjustResize|stateVisible"
            android:configChanges="orientation"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.hater.ReadArticleActivity"
            android:label="@string/title_activity_readarticle"
            android:configChanges="orientation|keyboardHidden" 
            android:windowSoftInputMode="adjustResize"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.hater.MyArticleActivity"
            android:label="@string/title_activity_myarticle"
            android:configChanges="orientation|keyboardHidden" 
            android:windowSoftInputMode="adjustResize"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.hater.UserArticleActivity"
            android:label="@string/title_activity_myarticle"
            android:configChanges="orientation|keyboardHidden" 
            android:windowSoftInputMode="adjustResize"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.hater.AboutActivity"
            android:label="@string/title_activity_about"
            android:configChanges="orientation|keyboardHidden" 
            android:windowSoftInputMode="adjustResize"
			android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.cooltey.hater.SetInformationActivity"
            android:label="@string/title_activity_setinfo"
            android:configChanges="orientation|keyboardHidden" 
            android:windowSoftInputMode="adjustResize"
			android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
